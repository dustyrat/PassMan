<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.passman.SetPass">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/curPwd"
        android:layout_above="@+id/newPwd"
        android:layout_alignRight="@+id/submit"
        android:layout_alignEnd="@+id/submit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Current Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/newPwd"
        android:layout_above="@+id/confirmPwd"
        android:layout_alignRight="@+id/curPwd"
        android:layout_alignEnd="@+id/curPwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="New Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmPwd"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/newPwd"
        android:layout_alignEnd="@+id/newPwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Confirm New Password" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:src="@drawable/ic_action_accept"
        android:background="#ff08bc00"
        android:scaleType="fitCenter"
        android:cropToPadding="false"
        android:layout_above="@+id/cancel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/cancel"
        android:layout_alignEnd="@+id/cancel" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        android:src="@drawable/ic_action_cancel"
        android:background="#ffb9b9b9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:focusable="false" />
</RelativeLayout>
