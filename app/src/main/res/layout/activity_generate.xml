<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.passman.Generate">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1"
            android:id="@+id/minView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/range"
            android:layout_below="@+id/pwd"
            android:layout_toRightOf="@+id/minView"
            android:layout_toLeftOf="@+id/maxView"
            android:layout_alignParentTop="true"></LinearLayout>

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="32"
            android:id="@+id/maxView"
            android:layout_below="@+id/pwd"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />
        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alpha"
                android:id="@+id/alpha"
                android:layout_weight="0.04"
                android:layout_row="0"
                android:layout_column="0" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numeric"
                android:id="@+id/numeric"
                android:layout_weight="0.04"
                android:layout_row="1"
                android:layout_column="0" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special"
                android:id="@+id/special"
                android:layout_weight="0.04"
                android:layout_row="2"
                android:layout_column="0" />

            <RadioGroup
                android:id="@+id/radioSpec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.04"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_rowSpan="1">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:id="@+id/spec_all"
                    android:layout_weight="0.04"
                    android:checked="true"
                    android:enabled="false"/>

                <RadioButton
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:text="Custom"
                    android:id="@+id/spec_custom"
                    android:enabled="false"/>
            </RadioGroup>

        </GridLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/custom"
                android:enabled="false"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Enter Custom Variables" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Password"
            android:id="@+id/pwd"
            android:layout_toLeftOf="@+id/copy"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/copy"
            android:textStyle="normal"
            android:typeface="normal"
            android:textIsSelectable="true"
            android:layout_weight="0.16"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="copy"
            android:id="@+id/copy"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <Button
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:text="Generate"
        android:id="@+id/gen_pwd"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back"
        android:layout_below="@+id/gen_pwd"
        android:layout_alignLeft="@+id/gen_pwd"
        android:layout_alignStart="@+id/gen_pwd"
        android:layout_alignRight="@+id/gen_pwd"
        android:layout_alignEnd="@+id/gen_pwd" />
</RelativeLayout>
